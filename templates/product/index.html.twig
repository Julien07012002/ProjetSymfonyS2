{% extends 'base.html.twig' %}

{% block body %}
  <h1>Products</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for product in products %}
        <tr>
          <td>{{ product.name }}</td>
          <td>{{ product.description }}</td>
          <td>{{ product.price }}</td>
          <td>{{ product.category.name }}</td>
          <td>
            <a href="{{ path('product_show', { 'id': product.id }) }}">Show</a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="5">Pas de produits trouv√©s</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}